{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "fabric-layers-core": ["packages/fabric-layers-core/src/index.ts"],
      "fabric-layers-react": ["packages/fabric-layers-react/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
